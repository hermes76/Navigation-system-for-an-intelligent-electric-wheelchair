<launch>
  <!-- Arguments -->
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="move_forward_only" default="false"/>


 <!-- Run the map server --> 
    <node name="map_server" pkg="map_server" type="map_server" args="$(find ewc_2dnav)/maps/map.yaml"/>

  <!-- AMCL -->
  <include file="$(find ewc_2dnav)/launch/amcl.launch"/>

  <!-- move_base -->
  <include file="$(find ewc_2dnav)/launch/move_base.launch">
    <arg name="model" value="$(arg model)" />
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

</launch>
